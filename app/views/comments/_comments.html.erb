<div class="row">
<div class="col-md-8" style="margin-top: 50px;">
  <h4>Comments</h4><hr>
  <ul class="media-list">
  <% comments.each do |comment| %>
  <li class="media">
    <a class="pull-left" href="">
      <%= image_tag(comment.user.avatar.profile.url, class: 'media-object') if comment.user.avatar? %>
    </a>
    <div class="media-body">
      <p><%= comment.body %></p>
      <small>
        submitted <%= time_ago_in_words(comment.created_at) %> ago by
        <%= comment.user.name %>
      </small>
    </div>
  </li>
  <% end %>
  </ul>
</div>
</div>